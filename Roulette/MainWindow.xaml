<Window x:Class="Roulette.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBlock x:Name="numberDisplay" HorizontalAlignment="Left" Margin="10,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="61" Height="51"/>
        <Button x:Name="rollButton" Content="Roll" HorizontalAlignment="Left" Margin="76,47,0,0" VerticalAlignment="Top" Width="37" Click="rollButton_Click"/>
        <TextBlock x:Name="statusBlock" HorizontalAlignment="Left" Margin="332,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="132" Width="175"/>
        <Ellipse x:Name="ellipseColor" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="48" Margin="162,36,0,0" Stroke="Black" VerticalAlignment="Top" Width="48"/>
        <GroupBox Header="GroupBox" HorizontalAlignment="Left" Margin="10,107,0,0" VerticalAlignment="Top" Height="70" Width="83">
            <StackPanel HorizontalAlignment="Left" Height="38" Margin="10,10,0,0" VerticalAlignment="Top" Width="55">
                <RadioButton x:Name="radioRed" Content=" Red"/>
                <RadioButton x:Name="radioBlack" Content=" Black"/>
            </StackPanel>
        </GroupBox>

    </Grid>
</Window>
